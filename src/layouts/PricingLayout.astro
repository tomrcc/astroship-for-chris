---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import PricingCard from "@/components/pricing.astro";

const { plans } = Astro.props.frontmatter;
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title"
        ><editable-source
          data-path="src/layouts/PricingLayout.astro"
          data-key="title"
          data-type="text">Pricing</editable-source
        ></Fragment
      >
      <Fragment slot="desc">
        <editable-source
          data-path="src/layouts/PricingLayout.astro"
          data-key="desc"
          data-type="text">
          Simple & Predictable pricing. No Surprises.
        </editable-source>
      </Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-10 mx-auto max-w-(--breakpoint-lg) mt-12"
      data-editable="array"
      data-prop="plans"
      data-direction="row">
      {
        plans.map((item) => (
          <editable-array-item>
            <PricingCard plan={item} />
          </editable-array-item>
        ))
      }
    </div>
  </Container>
</Layout>
