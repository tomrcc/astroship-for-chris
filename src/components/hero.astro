---
import { Picture } from "astro:assets";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";

const { heading, content, color, image, alt, buttons = [] } = Astro.props;
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
  style={`background-color: ${color}`}>
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={image}
      alt={alt}
      data-editable="image"
      data-prop-src="image"
      data-prop-alt="alt"
      width={520}
      height={424}
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
      data-editable="text"
      data-prop="heading">
      {heading}
    </h1>
    <p
      class="text-lg mt-4 text-slate-600 max-w-xl"
      set:html={content}
      data-editable="text"
      data-prop="content"
    />
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      {
        buttons.map((button) => {
          const iconColor = button.iconColor || "white";
          const iconClass =
            iconColor === "black" ? "text-black w-4 h-4" : "text-white w-5 h-5";
          return (
            <Link
              href={button.link}
              class="flex gap-1 items-center justify-center">
              {button.icon && <Icon class={iconClass} name={button.icon} />}
              {button.text}
            </Link>
          );
        })
      }
    </div>
  </div>
</main>
