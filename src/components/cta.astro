---
import Link from "./ui/link.astro";

const { heading, description, buttonText, buttonLink } = Astro.props;
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2
    class="text-white text-4xl md:text-6xl tracking-tight"
    data-editable="text"
    data-prop="heading">
    {heading}
  </h2>
  <p
    class="text-slate-400 mt-4 text-lg md:text-xl"
    data-editable="text"
    data-prop="description">
    {description}
  </p>
  <div class="flex mt-5">
    <Link href={buttonLink} style="inverted"
      ><editable-text data-prop="buttonText">{buttonText}</editable-text></Link
    >
  </div>
</div>
